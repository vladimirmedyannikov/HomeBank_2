<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/operatCategImage"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/operatAbout"
            android:textSize="10sp"
            android:lines="2"
            android:singleLine="false"
            android:padding="0dp"
            android:textColor="@color/color_primary_dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/operatValue"
            android:text="12800"
            android:textSize="18sp"
            android:lines="2"
            android:singleLine="true"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal|right" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operatDate"
                android:text="10.10.2016"
                android:textSize="10sp"
                android:lines="1"
                android:singleLine="false"
                android:paddingRight="5dp"
                android:gravity="right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operatSync"
                android:text="@string/sync"
                android:textSize="10sp"
                android:lines="1"
                android:singleLine="false"
                android:paddingRight="5dp"
                android:gravity="right"
                android:textColor="@color/color_no_sync"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
